<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin Android Course"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List View"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/skyblue"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:onClick="open_listview"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom ListView"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/skyblue"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:onClick="custom_list"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="GridView"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/skyblue"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:onClick="gridview_click"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="WebView"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/skyblue"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:onClick="webview_click"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Implicit Intent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:onClick="impl_click"
        />
    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Misc"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#8E24AA"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:onClick="misc_click"
        />




</LinearLayout>